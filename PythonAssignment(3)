numberList = [20, 25, 20, 45, 75, 15, 55, 10]

def splitevenodd(x):
   evenlist = []
   oddlist = []
   for i in x:
      if (i % 2 == 0):
         evenlist.append(i)
      else:
         oddlist.append(i)
   print("Even lists:", evenlist)
   print("Odd lists:", oddlist)
def valcheck():

    if numberList[0] == numberList[len(numberList)-1]:
        return True
    else:
        return False

print ("Check equivalence of values of the first and the last number: ", valcheck())
splitevenodd(numberList)
